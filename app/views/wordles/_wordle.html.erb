<div id="<%= dom_id wordle %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Solution:</strong>
    <%= wordle.solution %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this wordle", wordle, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this wordle", edit_wordle_path(wordle), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
